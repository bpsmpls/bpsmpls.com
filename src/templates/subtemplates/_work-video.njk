<article id="{{ workID }}" class="work video">
	<figure class="thumb">
		<a href="https://www.youtube.com/watch?v={{ videoID }}" target="_blank">
			<img src="assets/media/images/video/{{ videoThumbnail }}" alt="Video Thumbnail: {{ workTitle|safe }}" data-modal="video-{{ workID }}">
			<div class="play-btn"></div>
		</a>

		<!-- <div id="video-{{ workID }}" class="modal">
			<iframe width="560" height="315" src="https://www.youtube.com/embed/{{ videoID }}?rel=0&amp;controls=0&amp;showinfo=0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
		</div> -->
	</figure>

	<div class="info">
		<h2 class="title">{{ workTitle|safe }}</h2>
		<div class="description t-justify">
			{% block workDescription %}
			{% endblock %}
		</div>
		<div class="roles">
			<ul>
				{% for role in roles %}
				<li>{{ role }}</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</article>